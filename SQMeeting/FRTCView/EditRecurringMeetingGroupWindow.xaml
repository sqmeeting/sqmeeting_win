                            </Style.Triggers>
                        </Style>
                    </UniformGrid.Style>
                    <CheckBox Style="{StaticResource monthDaysSelectorStyle}" Width="32" Height="32" Content="1" Tag="1" Command="{Binding SetRecurringMonthDayCmd}"
