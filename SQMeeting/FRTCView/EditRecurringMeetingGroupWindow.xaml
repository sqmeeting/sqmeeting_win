                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ScheduleMeetingTimeIllegal}" Value="True">
                                        <Setter Property="BorderBrush" Value="#E32726"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DatePicker.Style>
                    </DatePicker>
